{
  "name": "teamwerx",
  "version": "1.0.0",
  "description": "A development framework for individual developers working with multiple AI agents",
  "main": "lib/index.js",
  "bin": {
    "teamwerx": "./bin/teamwerx.js"
  },
  "scripts": {
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "lint": "eslint lib bin",
    "lint:fix": "eslint lib bin --fix",
    "lint:check": "eslint lib bin",
    "format": "prettier --write .",
    "prepare": "husky install",
    "start": "node bin/teamwerx.js",
    "ci": "npm run format && npm run lint && npm test"
  },
  "keywords": [
    "ai",
    "development",
    "workflow",
    "cli",
    "agents",
    "goal-oriented"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "gray-matter": "^4.0.3",
    "inquirer": "^8.2.6",
    "js-yaml": "^4.1.0",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "eslint": "^8.55.0",
    "jest": "^30.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.8",
    "eslint-config-prettier": "^8.8.0"
  },
  "lint-staged": {
    "*.{js,md,json,mdx}": [
      "prettier --write"
    ],
    "lib/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "bin/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
