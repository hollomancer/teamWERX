#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Run lint-staged to format and fix staged files before commit.
# Uses the locally installed binary when available.
npx --no-install lint-staged || {
  echo ""
  echo "⚠️  lint-staged failed. Fix the issues above, or run:"
  echo "    npx lint-staged"
  echo ""
  exit 1
}
